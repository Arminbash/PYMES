@model DataLayer.InventarioProducto

@{
    ViewBag.Title = "Create";
}

<h2>Crear Nuevo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Inventario de Producto</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.IdProducto, "IdProducto", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdProducto", String.Empty)
                @Html.ValidationMessageFor(model => model.IdProducto)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UnidadMedida, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UnidadMedida)
                @Html.ValidationMessageFor(model => model.UnidadMedida)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ValorxUnidad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ValorxUnidad)
                @Html.ValidationMessageFor(model => model.ValorxUnidad)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CantidaExistencia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CantidaExistencia)
                @Html.ValidationMessageFor(model => model.CantidaExistencia)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <p>
        <a href="~/InventarioProducto/Index" class="btn btn-primary" style="background-color:#ff6a00; color:white !important;">Regregar a Lista</a>
    </p>

    @*@Html.ActionLink("Back to List", "Index")*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
